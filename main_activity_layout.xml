<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/lemongreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/immediateqr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="256dp"
        android:width="300dp"
        android:height="13dp"
        android:text="Scan QR Code"
        android:textAlignment="center"
        android:textSize="13dp"
        app:backgroundTint="@color/darkgreen"
        app:icon="@drawable/qr_scan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"

        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/emailIntent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="84dp"
        android:width="300dp"
        android:height="13dp"
        android:text="Share to Email"
        android:textColor="@color/white"
        android:textSize="13dp"
        app:backgroundTint="@color/darkgreen"
        app:icon="@drawable/baseline_email_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"

        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/qrgenbuttonconfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:width="300dp"
        android:height="13dp"
        android:text="Generate a QR"
        android:textColor="@color/white"
        android:textSize="13dp"
        app:backgroundTint="@color/darkgreen"

        app:icon="@drawable/baseline_email_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"

        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/firebaseSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="144dp"
        android:width="300dp"
        android:height="13dp"
        android:text="Send QR Details to Database"
        android:textColor="@color/white"
        android:textSize="13dp"

        app:backgroundTint="@color/darkgreen"
        app:icon="@drawable/baseline_send_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"

        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/currentqrlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="200dp"
        android:width="300dp"
        android:text="Current QR List "
        android:textSize="13dp"
        app:backgroundTint="@color/darkgreen"
        app:icon="@drawable/baseline_view_list_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/scannedText"
        android:layout_width="343dp"
        android:layout_height="146dp"
        android:layout_marginTop="248dp"
        android:text="Place everything in frame. Avoid super bright screens and shaky control to get the code right."
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/imageFilterView"
        android:layout_width="107dp"
        android:layout_height="111dp"

        android:layout_marginTop="112dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/qr_scan" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan a QR Code"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="70dp"
        tools:ignore="MissingConstraints" />

 


</androidx.constraintlayout.widget.ConstraintLayout>
